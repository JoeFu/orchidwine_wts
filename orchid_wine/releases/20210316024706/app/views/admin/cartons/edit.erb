<div id="page-head">
  <div id="page-title">
    <h1 class="page-header text-overflow">编辑纸箱</h1>
  </div>
  <ol class="breadcrumb">
    <li><i class="ion-home"></i></li>
    <li>基础数据</li>
    <li>包材管理</li>
    <li>纸箱</li>
    <li class="active">编辑 <%== @carton.desc %></li>
  </ol>
</div>
<div id="page-content">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-8">
      <div class="panel">
        <%= form_tag("/admin/cartons/#{@carton.id}", method: :put, class: 'form-horizontal', id: 'boxes-edit') do -%>
        <div class="panel-body">
          <div class="pad-btm form-inline">
            <div class="row">
              <div class="col-sm-12 table-toolbar-left">
                <%== return_list_tag %>
                <hr/>
              </div>
            </div>
          </div>
          
          <p class="text-main text-center text-bold mar-no">编辑 「<%== @carton.desc %>」 信息</p><br>
          <div class="row">
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 描述</label>
              <div class="col-sm-6">
                <input type="text" name="desc" class="form-control" value="<%== @carton.desc %>">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 支数(数字)</label>
              <div class="col-sm-6">
                <input type="text" name="bottle_number" class="form-control" value="<%== @carton.bottle_number %>">
              </div>
            </div>
          </div>
        </div>
        
        <div class="panel-footer">
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3">
              <%== submit_save %>
            </div>
          </div>
        </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>