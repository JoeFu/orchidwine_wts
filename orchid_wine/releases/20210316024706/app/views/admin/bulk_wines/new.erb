<div id="page-head">
  <div id="page-title">
    <h1 class="page-header text-overflow">添加产品</h1>
  </div>
  <ol class="breadcrumb">
    <li><i class="ion-home"></i></li>
    <li>基础数据</li>
    <li>产品管理</li>
    <li>产品注册</li>
    <li class="active">添加产品</li>
  </ol>
</div>
<div id="page-content">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-8">
      <%= form_tag("/admin/bulk_wines", method: :post, class: 'form-horizontal', id: 'bulk_wines-new') do -%>
      <div class="panel">
        <div class="panel-body">
          <div class="pad-btm form-inline">
            <div class="row">
              <div class="col-sm-12 table-toolbar-left">
                <%== return_list_tag %>
                <hr/>
              </div>
            </div>
          </div>
          
          <p class="text-main text-center text-bold mar-no">添加 产品 信息</p><br>
          <div class="row">
            <input type="hidden" id="hidden-lip" name='lip'>
            <input type="hidden" id="hidden-analysis" name='analysis'>
            
            <div class="form-group">
              <label class="col-sm-3 control-label">批次</label>
              <div class="col-sm-6">
                <%== select_tag "batch", options_for_select(BulkWine::BATCHS, params[:batch]), class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 商品类别</label>
              <div class="col-sm-6">
                <select class="form-control" name="sort_id">
                  <%== options_for_select(BulkWineSort.options.invert, params[:sort_id]) %>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 供应商</label>
              <div class="col-sm-6">
                <select class="form-control" name="vendor_id">
                  <%== options_for_select(BulkWineVendor.options.invert, params[:vendor_id]) %>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 年份</label>
              <div class="col-sm-6">
                <select class="form-control" name="year">
                  <%== options_for_select(BulkWineYear.options, params[:year]) %>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 产地1</label>
              <div class="col-sm-6">
                <select class="form-control" name="area_id_one">
                  <%== options_for_select(BulkWineArea.options.invert, params[:area_id_one]) %>
                </select>
              </div>
              <div class="col-sm-3">
                <div class="checkbox">
                  <input id="bulk_wine-area-single" class="magic-checkbox" type="checkbox">
                  <label for="bulk_wine-area-single">单一产区</label>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 产地2</label>
              <div class="col-sm-6">
                <select class="form-control" name="area_id_two">
                  <%== options_for_select(BulkWineArea.options.invert, params[:area_id_two]) %>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 品种1</label>
              <div class="col-sm-6">
                <select class="form-control" name="variety_id_one">
                  <%== options_for_select(BulkWineVariety.options.invert, params[:variety_id_one]) %>
                </select>
              </div>
              <div class="col-sm-3">
                <div class="checkbox">
                  <input id="bulk_wine-variety-single" class="magic-checkbox" type="checkbox">
                  <label for="bulk_wine-variety-single">单一品种</label>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 品种2</label>
              <div class="col-sm-6">
                <select class="form-control" name="variety_id_two">
                  <%== options_for_select(BulkWineVariety.options.invert, params[:variety_id_two]) %>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 品种3</label>
              <div class="col-sm-6">
                <select class="form-control" name="variety_id_three">
                  <%== options_for_select(BulkWineVariety.options.invert, params[:variety_id_three]) %>
                </select>
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 酒精度</label>
              <div class="col-sm-6">
                <%= text_field_tag 'alcoholic_strength', params[:alcoholic_strength].to_f2, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3">
              <%== submit_save %>
            </div>
          </div>
        </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>