<div class="table-responsive">
	<table class="table table-striped table-vcenter">
		<thead>
			<tr>
				<th width="15%">名称</th>
				<th width="5%">评分</th>
				<th width="10%">分类</th>
				<th width="8%">葡萄品种</th>
				<th width="8%">葡萄产区</th>
				<th width="8%">酿酒师</th>
				<th width="15%">入口滋味</th>
				<th width="15%" class="text-center">操作</th>
			</tr>
		</thead>
		<tbody>
			<% if @web_products.present?%>
			<% @web_products.map do |product|%>
			<tr>
				<td><%== product.name %></td>
				<td><%== product.score %></td>
				<td><%== product.web_product_category.name rescue '-' %></td>
				<td><%== product.grape_variety %></td>
				<td><%== product.grape_area %></td>
				<td><%== product.wine_maker %></td>
				<td><%== product.match %></td>
				<td class="text-center">
					<%== edit_btn_tag(product) %>
					<%== destroy_btn_tag(product) %>
				</td>
			</tr>
			<% end %>
			<% end %>
		</tbody>
	</table>
</div>