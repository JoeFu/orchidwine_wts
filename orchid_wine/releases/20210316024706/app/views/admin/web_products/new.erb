<div id="page-head">
  <div id="page-title">
    <h1 class="page-header text-overflow">添加产品</h1>
  </div>
  <ol class="breadcrumb">
    <li><i class="ion-home"></i></li>
    <li>官网产品配置</li>
    <li>产品列表</li>
    <li class="active">添加产品</li>
  </ol>
</div>
<div id="page-content">
  <div class="row">
    <div class="col-12">
      <div class="panel">
        <%= form_tag("/admin/web_products", method: :post, class: 'form-horizontal', id: 'web_products-new') do -%>
        <div class="panel-body">
          <div class="pad-btm form-inline">
            <div class="row">
              <div class="col-sm-12 table-toolbar-left">
                <%== return_list_tag %>
                <hr/>
              </div>
            </div>
          </div>
          
          <p class="text-main text-center text-bold mar-no">添加 产品 信息</p><br>
          <div class="row">
            <div class="form-group">
              <label class="col-md-3 control-label" >名称</label>
              <div class="col-md-6">
                <%= text_field_tag 'name', params[:name], placeholder: "名称", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label">分类</label>
              <div class="col-md-6">
                <select class="form-control" name="web_product_category_id">
                  <%== options_for_select(Hash[WebProductCategory::all_pluck].invert, params[:web_product_category_id]) %>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" >评分</label>
              <div class="col-md-6">
                <%= text_field_tag 'score', params[:score], placeholder: "评分", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" >葡萄品种</label>
              <div class="col-md-6">
                <%= text_field_tag 'grape_variety', params[:grape_variety], placeholder: "葡萄品种", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" >葡萄产区</label>
              <div class="col-md-6">
                <%= text_field_tag 'grape_area', params[:grape_area], placeholder: "葡萄产区", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" >酿酒师</label>
              <div class="col-md-6">
                <%= text_field_tag 'wine_maker', params[:wine_maker], placeholder: "酿酒师", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" >入口滋味</label>
              <div class="col-md-6">
                <%= text_field_tag 'taste', params[:taste], placeholder: "入口滋味", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" >餐饮搭配</label>
              <div class="col-md-6">
                <%= text_field_tag 'match', params[:match], placeholder: "餐饮搭配", class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" >封面</label>
              <div class="col-md-6">
                <input type="hidden" id="hidden-cover" name="cover" value="">
                <span class="pull-left btn btn-default btn-file">
                  选择文件... <input id='cover' type="file" class="img-upload">
                </span>
              </div>
              <div class="col-md-9 col-md-offset-3" id="preview-cover">
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" >PDF</label>
              <div class="col-md-6">
                <input type="hidden" id="hidden-pdf" name="pdf" value="">
                <span class="pull-left btn btn-default btn-file">
                  选择文件... <input id='pdf' type="file" class="img-upload">
                </span>
              </div>
              <div class="col-md-9 col-md-offset-3" id="preview-pdf">
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" >产品特点</label>
              <div class="col-md-6">
                <textarea class="form-control" name='feature' style="width: 100%;height: 100px;"><%== params[:feature] %></textarea>
              </div>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3">
              <%== submit_save %>
            </div>
          </div>
        </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>
<!--===================================================-->
<!--End page content-->