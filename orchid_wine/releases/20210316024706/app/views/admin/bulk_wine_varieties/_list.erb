<div class="table-responsive">
  <table class="table table-striped table-vcenter">
    <thead>
      <tr>
        <th width="20%" class="text-center">编码</th>
        <th width="20%" class="text-center">中文名</th>
        <th width="20%" class="text-center">英文名</th>
        <th width="20%" class="text-center">编辑</th>
        <th width="20%" class="text-center">删除</th>
      </tr>
    </thead>
    <tbody>
      <% @bulk_wine_varieties.map do |bulk_wine_variety|%>
      <tr>
        <td class="text-center"><%== bulk_wine_variety.code %></td>
        <td class="text-center"><%== bulk_wine_variety.name_zh %></td>
        <td class="text-center"><%== bulk_wine_variety.name_en %></td>
        <td class="text-center">
          <%== edit_btn_tag(bulk_wine_variety) %>
        </td>
        <td class="text-center">
          <% if @used_variety_ids.include?(bulk_wine_variety.id) %>
          已使用，不能删除。
          <% else %>
          <%== destroy_btn_tag(bulk_wine_variety)%>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>