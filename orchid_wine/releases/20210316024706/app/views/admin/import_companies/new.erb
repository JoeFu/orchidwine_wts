<div id="page-head">
  <div id="page-title">
    <h1 class="page-header text-overflow">添加进口公司</h1>
  </div>
  <ol class="breadcrumb">
    <li><i class="ion-home"></i></li>
    <li>客户管理</li>
    <li>进口公司列表</li>
    <li class="active">添加进口公司</li>
  </ol>
</div>
<div id="page-content">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-8">
      <div class="panel">
        <%= form_tag("/admin/import_companies", method: :post, class: 'form-horizontal', id: 'import_companies-edit') do -%>
        <div class="panel-body">
          <div class="pad-btm form-inline">
            <div class="row">
              <div class="col-sm-12 table-toolbar-left">
                <%== return_list_tag %>
                <hr/>
              </div>
            </div>
          </div>
          <p class="text-main text-center text-bold mar-no">添加进口公司信息</p><br>
          <div class="row">
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 公司名称</label>
              <div class="col-sm-6">
                <input type="text" name='name' placeholder="公司名称" class="form-control" value="<%== params[:name] %>">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 联系人</label>
              <div class="col-sm-6">
                <input type="text" name="contacts" placeholder="联系人" class="form-control" value="<%== params[:contacts] %>">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 电话号码</label>
              <div class="col-sm-6">
                <input type="text" name='telephone' placeholder="电话号码" class="form-control" value="<%== params[:telephone] %>">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 电子邮箱</label>
              <div class="col-sm-6">
                <input type="text" name='email' placeholder="电子邮箱" class="form-control" value="<%== params[:email] %>">
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 社会统一信用代码</label>
              <div class="col-sm-6">
                <input type="text" name='uscc' placeholder="社会统一信用代码" class="form-control" value="<%== params[:uscc] %>">
              </div>
            </div>
            <% if @admin_session.role != 2 %>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 归属销售</label>
              <div class="col-sm-6">
                <select class="selectpicker form-control" name="admin_id">
                  <option value="">请选择</option>
                  <%== options_for_select(Hash[Admin.sellers_pluck].invert, @admin_session.id) %>
                </select>
              </div>
            </div>
            <% else %>
            <%== hidden_field_tag :admin_id, @admin_session.id %>
            <% end %>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 地址</label>
              <div class="col-sm-6">
                <input type="text" name='address' placeholder="地址" class="form-control" value="<%== params[:address] %>">
              </div>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3">
              <%== submit_save %>
            </div>
          </div>
        </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>
<!--===================================================-->
<!--End page content-->