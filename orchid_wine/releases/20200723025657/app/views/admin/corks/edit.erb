<div id="page-head">
  <div id="page-title">
    <h1 class="page-header text-overflow">编辑酒塞</h1>
  </div>
  <ol class="breadcrumb">
    <li><i class="ion-home"></i></li>
    <li>基础数据</li>
    <li>包材管理</li>
    <li>酒塞</li>
    <li class="active">编辑 <%== @cork.texture_code %></li>
  </ol>
</div>
<div id="page-content">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-8">
      <div class="panel">
        <%= form_tag("/admin/corks/#{@cork.id}", method: :put, class: 'form-horizontal', id: 'corks-edit') do -%>
        <div class="panel-body">
          <div class="pad-btm form-inline">
            <div class="row">
              <div class="col-sm-12 table-toolbar-left">
                <%== return_list_tag %>
                <hr/>
              </div>
            </div>
          </div>
          
          <p class="text-main text-center text-bold mar-no">编辑 「<%== @cork.texture_code %>」 信息</p><br>
          <div class="row">
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 材质编码</label>
              <div class="col-sm-6">
                <input type="text" name='texture_code' placeholder="材质编码" class="form-control" value="<%== @cork.texture_code %>">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 材质描述</label>
              <div class="col-sm-6">
                <input type="text" name='texture_des' placeholder="材质描述" class="form-control" value="<%== @cork.texture_des %>">
              </div>
            </div>

          </div>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3">
              <%== submit_save %>
            </div>
          </div>
        </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>