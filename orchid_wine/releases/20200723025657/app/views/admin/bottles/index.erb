<div id="page-head">
  <div id="page-title">
    <h1 class="page-header text-overflow">酒瓶</h1>
  </div>
  <ol class="breadcrumb">
    <li><i class="ion-home"></i></li>
    <li>基础数据</li>
    <li>包材管理</li>
    <li class="active">酒瓶</li>
  </ol>
</div>
<div id="page-content">
  <div class="panel">
    <div class="panel-heading">
      <h3 class="panel-title">酒瓶列表</h3>
    </div>
    <div class="panel-body">
      <div class="pad-btm form-inline">
        <%= form_tag("/admin/bottles", method: :get) do -%>
        <div class="row">
          <div class="col-sm-3 table-toolbar-left">
            <%== new_btn_tag "/admin/bottles/new", '添加瓶型' %>
            <%== export_btn_tag "/admin/bottles/export", '导出列表' %>
          </div>
          <div class="col-sm-9 table-toolbar-right">
            <div class="form-group">
              <%= text_field_tag 'bottle_code', params[:bottle_code], placeholder: '搜索名称', class: "form-control"%>
            </div>
            <div class="form-group">
              <select class="selectpicker form-control" name="status">
                <option value="">所有状态</option>
                <%== options_for_select(Hash[Bottle::STATUS].invert, params[:status])%>
              </select>
            </div>
            <%== submit_tag %>
            <%== clear_tag "/admin/bottles" %>
          </div>
        </div>
        <% end -%>
      </div>
      <%= render 'admin/bottles/list' %>
      <div class="row">
        <%== table_footer_tag @bottles %>
      </div>
    </div>
  </div>
</div>