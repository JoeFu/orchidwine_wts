<div id="page-head">
  <div id="page-title">
    <h1 class="page-header text-overflow">添加酒瓶</h1>
  </div>
  <ol class="breadcrumb">
    <li><i class="ion-home"></i></li>
    <li>基础数据</li>
    <li>包材管理</li>
    <li>酒瓶</li>
    <li class="active">添加酒瓶</li>
  </ol>
</div>
<div id="page-content">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-8">
      <%= form_tag("/admin/bottles", method: :post, class: 'form-horizontal', id: 'bottles-new') do -%>
      <div class="panel">
        <div class="panel-body">
          <div class="pad-btm form-inline">
            <div class="row">
              <div class="col-sm-12 table-toolbar-left">
                <%== return_list_tag %>
                <hr/>
              </div>
            </div>
          </div>
          
          <p class="text-main text-center text-bold mar-no">添加 酒瓶 信息</p><br>
          <div class="row">
            
            <input type="hidden" id="hidden-cover" name='cover' value="<%== params[:cover] %>">
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 缩略图</label>
              <div class="col-sm-6">
                <span class="pull-left btn btn-default btn-file">
                  选择图片文件... <input id='cover' type="file" class="img-upload">
                </span>
              </div>
              <div class="col-sm-6 col-sm-offset-3" id="preview-cover">
                <% if params[:cover].present? %>
                <img src="<%== params[:cover] %>">
                <% end %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 瓶型</label>
              <div class="col-sm-6">
                <input type="text" class="form-control" name="bottle_code" value="<%== params[:bottle_code] %>">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 封瓶方式</label>
              <div class="col-sm-6">
                <input type="text" name="fp_text" class="form-control fp-text" value="" readonly="readonly">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 供应商代码</label>
              <div class="col-sm-6">
                <input type="text" class="form-control" name="vendor_code" value="<%== params[:vendor_code] %>">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 瓶高(mm)</label>
              <div class="col-sm-6">
                <input type="text" class="form-control" name="height" value="<%== params[:height] %>">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 容量(ml)</label>
              <div class="col-sm-6">
                <input type="text" class="form-control" name="volume" value="<%== params[:volume] %>">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 重量(g)</label>
              <div class="col-sm-6">
                <input type="text" class="form-control" name="weight" value="<%== params[:volume] %>">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label"><b class="text-danger">*</b> 瓶形状</label>
              <div class="col-sm-6">
                <input type="text" class="form-control" name="shape" value="<%== params[:shape] %>">
              </div>
            </div>
            <input type="hidden" name="seal" value="<%== params[:seal].present? ? params[:seal] : 2 %>">
          </div>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3">
              <%== submit_save %>
            </div>
          </div>
        </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
$('input[name=bottle_code]').change(function(){
var mvalue = $(this).val();
var last = mvalue.charAt(mvalue.length-1,1);
if (last == 'B') {
$('.fp-text').val('B-BVS-螺旋盖');
$('input[name=seal]').val('2');
} else {
$('.fp-text').val('C-CK-木塞');
$('input[name=seal]').val('1');
}
});
</script>