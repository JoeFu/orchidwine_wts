<div class="table-responsive">
  <table class="table table-striped table-vcenter">
    <thead>
      <tr>
        <th class="text-center">缩略图</th>
        <th>型号</th>
        <th>供应商代码</th>
        <th class="text-center">封瓶方式</th>
        <th class="text-center">容量（ml）</th>
        <th class="text-center">瓶形状</th>
        <th class="text-center">状态</th>
        <th class="text-center">编辑</th>
      </tr>
    </thead>
    <tbody>
      <% @bottles.map do |bottle|%>
      <tr>
        <td class="text-center"><img style='max-height: 30px;max-width: 30px;' src="<%== bottle.cover %>"></td>
        <td><%== bottle.bottle_code %></td>
        <td><%== bottle.vendor_code %></td>
        <td class="text-center"><%== bottle.show_seal %></td>
        <td class="text-center"><%== int_float(bottle.volume) %>ml</td>
        <td class="text-center"><%== bottle.shape %></td>
        <td class="text-center"><%== bottle.status_show %></td>
        <td class="text-center">
          <%== status_btn_tag(bottle, args = {:texts => {0 =>'上架', 1 =>'下架'}}) %>
          <%== edit_btn_tag(bottle) %>
          <%== destroy_btn_tag(bottle) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>