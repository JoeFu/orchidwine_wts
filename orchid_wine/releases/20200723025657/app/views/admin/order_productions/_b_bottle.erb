    <select class="form-control" name="cap_print">
      <%== options_for_select({'无需印刷' => 0,  '需要印刷' => 1}, @order_production.cap_print) %>
    </select>
  </div> -->
  <div class="col-sm-2 bottle-b <%== 'hide' if @bottle_type != "B" %>">
    <select class="form-control" name="cap_color">
      <option value="">无</option>
      <%== options_for_select(CapColor.select_options, @order_production.cap_color) %>
    </select>
  </div>
  <div class="col-md-2">
    <select name="cap_provider" class="form-control">
      <%== options_for_select(OrderProduction::PROVIDERS.invert, @order_production.cap_provider) %>
    </select>
  </div>
</div>