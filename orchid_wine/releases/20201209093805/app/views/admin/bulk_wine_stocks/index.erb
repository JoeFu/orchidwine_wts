<div id="page-head">
  <div id="page-title">
    <h1 class="page-header text-overflow">产品库存</h1>
  </div>
  <ol class="breadcrumb">
    <li><i class="ion-home"></i></li>
    <li>基础数据</li>
    <li>产品管理</li>
    <li class="active">产品库存</li>
  </ol>
</div>
<div id="page-content">
  <div class="panel">
    <div class="panel-heading">
      <h3 class="panel-title">产品列表</h3>
    </div>
    <div class="panel-body">
      <div class="pad-btm form-inline">
        <%= form_tag("/admin/bulk_wine_stocks", method: :get) do -%>
        <div class="row">
          <div class="col-sm-3 table-toolbar-left">
            <%== export_btn_tag "/admin/bulk_wine_stocks/export", '导出列表' %>
          </div>
          <div class="col-sm-9 table-toolbar-right">
            <div class="form-group">
              <div class="form-group">
                <select class="selectpicker form-control" name="sort_id">
                  <option value="">所有类别</option>
                  <%== options_for_select(BulkWineSort.options.invert, params[:sort_id])%>
                </select>
              </div>
              <%= text_field_tag 'q', params[:q], placeholder: '搜索产品编码', class: "form-control"%>
              <%= text_field_tag 'desc', params[:desc], placeholder: '描述', class: "form-control", autocomplete: 'off' %>
            </div>
            <%== submit_tag %>
            <%== clear_tag "/admin/bulk_wine_stocks" %>
          </div>
        </div>
        <% end -%>
      </div>
      <%= render 'admin/bulk_wine_stocks/list' %>
    </div>
  </div>
</div>