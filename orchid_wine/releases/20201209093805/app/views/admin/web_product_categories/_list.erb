<div class="table-responsive">
	<table class="table table-striped table-vcenter">
		<thead>
			<tr>
				<th width="25%">名称</th>
				<th width="25%">英文名称</th>
				<th width="25%" class="text-center">排序</th>
				<th width="25%" class="text-center">操作</th>
			</tr>
		</thead>
		<tbody>
			<% if @web_product_categories.present?%>
			<% @web_product_categories.map do |cate|%>
			<tr>
				<td><%== cate.name %></td>
				<td><%== cate.en_name %></td>
				<td class="text-center"><%== cate.sort %></td>
				<td class="text-center">
          <%== edit_btn_tag(cate) %>
          <%== destroy_btn_tag(cate) %>
				</td>
			</tr>
			<% end %>
			<% end %>
		</tbody>
	</table>
</div>