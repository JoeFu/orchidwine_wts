<div id="page-head">
  <div id="page-title">
    <h1 class="page-header text-overflow">编辑产品分类</h1>
  </div>
  <ol class="breadcrumb">
    <li><i class="ion-home"></i></li>
    <li>用户管理</li>
    <li>产品分类列表</li>
    <li class="active">编辑 <%== @web_product_category.name %></li>
  </ol>
</div>
<div id="page-content">
  <div class="row">
    <div class="col-12">
      <div class="panel">
        <%= form_tag("/admin/web_product_categories/#{@web_product_category.id}", method: :put, class: 'form-horizontal', id: 'web_product_categories-edit') do -%>
        <div class="panel-body">
          <div class="pad-btm form-inline">
            <div class="row">
              <div class="col-sm-12 table-toolbar-left">
                <%== return_list_tag %>
                <hr/>
              </div>
            </div>
          </div>
          <p class="text-main text-center text-bold mar-no">编辑 「<%== @web_product_category.name %>」 信息</p><br>
          <div class="row">
            <div class="form-group">
              <label class="col-sm-3 control-label">名称</label>
              <div class="col-sm-6">
                <%= text_field_tag 'name', @web_product_category.name, class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label" >英文名称</label>
              <div class="col-sm-6">
                <%= text_field_tag 'en_name', @web_product_category.en_name, class: "form-control"%>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label" >排序</label>
              <div class="col-sm-6">
                <%= text_field_tag 'sort', @web_product_category.sort, class: "form-control"%>
              </div>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3">
              <%== submit_save %>
            </div>
          </div>
        </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>