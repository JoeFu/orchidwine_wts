<div class="table-responsive">
  <table class="table table-striped table-vcenter">
    <thead>
      <tr>
        <th width="15%" class="text-center">自动编号</th>
        <th width="55%" class="text-center">图案</th>
        <th width="40%" class="text-center">操作</th>
      </tr>
    </thead>
    <tbody>
      <% @cap_colors.map do |cap_color|%>
      <tr>
        <td class="text-center"><%== cap_color.color_code %></td>
        <td class="text-center"><%== cap_color.color_value %></td>
        <td class="text-center">
          <%== edit_btn_tag(cap_color) %>
          <%== destroy_btn_tag(cap_color) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>